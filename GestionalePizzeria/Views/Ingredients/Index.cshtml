@model IEnumerable<GestionalePizzeria.Models.Ingredient>

@{
    ViewBag.Title = "Index";
}

<h1>Ingredienti disponibili</h1>

<p>
    @Html.ActionLink("Aggiungi un nuovo ingrediente", "Create", null, new {@class= "btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdIngredient }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.IdIngredient })
        </td>
    </tr>
}

</table>
